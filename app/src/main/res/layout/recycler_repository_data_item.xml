<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/recycler_repository_data_item_title"
            style="@style/CardViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/recycler_repository_data_item_owner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="owncloud/android" />

        <TextView
            android:id="@+id/recycler_repository_data_item_owner"
            style="@style/CardViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/recycler_repository_data_item_description"
            app:layout_constraintTop_toBottomOf="@+id/recycler_repository_data_item_title"
            tools:text="owncloud" />

        <TextView
            android:id="@+id/recycler_repository_data_item_description"
            style="@style/CardViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_repository_data_item_owner"
            tools:text=":phone: The ownCloud Android App" />

        <TextView
            android:id="@+id/recycler_repository_data_item_license"
            style="@style/CardViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/recycler_repository_data_item_owner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recycler_repository_data_item_owner"
            tools:text="GPL-2.0" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>